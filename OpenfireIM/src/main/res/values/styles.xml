<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--左右边距-->
    <style name="margin_left_right_20">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="margin_all_20_5">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!--字体样式-->

    <style name="text_style_16_9" parent="margin_all_20_5">
        <item name="android:textColor">#999</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="text_style_18_9" parent="margin_all_20_5">
        <item name="android:textColor">#999</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_style_18_6" parent="margin_all_20_5">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_style_16_e64340" parent="margin_all_20_5">
        <item name="android:textColor">#e64340</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
